@using CourseProject_Utility;
@model IEnumerable<Review>

@if (Model.Count() > 0)
{
    <form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container row">
                <div class="col -8">
                    <div class="card mt-4">
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-6">
                                <i class="fas fa-thumbs-up"></i> &nbsp;
                                @sharedResource["LikedReviews"]
                            </div>
                            <div class="col-6 text-right">
                                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">@sharedResource["BackReviews"]</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class=" d-none d-lg-block">
                                <div class="row" style="color:#821f3d">
                                    <div class="col-lg-2">
                                    </div>
                                    <div class="col-12 col-lg-7">
                                        @sharedResource["ReviewDetails"]
                                    </div>
                                    <div class="col-12 col-lg-2">
                                        @sharedResource["DatePublcRev"]
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-1">
                                    </div>
                                </div>
                            </div>

                            <hr />

                            @foreach (var obj in Model)
                            {
                                <div class="row h-100">
                                    <div class="col-4 col-md-2 text-center py-2">
                                        <img src="@obj.ImageUrl" class="rounded" width="100%" />
                                    </div>
                                    <div class="col-8 col-lg-7">
                                        <h5>@obj.NameObject</h5>
                                        <div style="font-size:11px;">@Html.Raw(obj.Description)</div>
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;">@obj.DatePublication</span>

                                    </div>
                                    <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                        <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-thumbs-down"></i>
                                        </a>
                                    </div>
                                </div>
                                <hr />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <p>@sharedResource["NotLiked"]</p>
}