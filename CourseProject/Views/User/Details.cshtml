@using CourseProject_Models.ViewModels;
@model UserVM

<form method="post">
    <input hidden asp-for="ApplicationUser!.Id" />
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-user"></i> &nbsp; @sharedResource["UserProfile"] 
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-action="Index" class="btn btn-outline-info form-control btn-sm">@sharedResource["BackToUsers"]</a>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">@sharedResource["ProfileDetails"]:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">@sharedResource["Id"]</div>
                                <div class="col-9">
                                    <input asp-for="ApplicationUser!.Id" type="text" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">@sharedResource["FullName"]</div>
                                <div class="col-9">
                                    <input asp-for="ApplicationUser!.FullName" type="text" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">@sharedResource["Email"]</div>
                                <div class="col-9">
                                    <input asp-for="ApplicationUser!.Email" type="text" class="form-control" readonly/>
                                </div>
                            </div>
                            <div class="row my-1 pt-2">
                                <div class="col-9 offset-3">
                                    <div class="row">
                                        <div class="col">
                                            <input type="submit" value=@sharedResource["CreateReview"] class="btn btn-info form-control" />
                                        </div>
                                        <div class="col">
                                            <input type="submit" value=@sharedResource["Delete"] class="btn btn-danger form-control"
                                                   formaction="/User/Delete" formmethod="post"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">@sharedResource["UserReviews"]</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @if (Model.Review!.Count() > 0)
                                {
                                    @foreach (var rev in Model.Review!)
                                    {
                                        <li class="list-group-item d-flex justify-content-between p-2">
                                            <div class="row container">
                                                <div class="col-8">
                                                    <h6 class="my-0 text-info">@rev.NameObject</h6>
                                                    <small class="text-muted">@sharedResource["Rating"]: @rev.Rating</small><br />
                                                </div>
                                                <div class="col-4">
                                                </div>
                                            </div>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <p>@sharedResource["NotReview"]</p>
                                }
                            </ul>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
