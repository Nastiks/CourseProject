@using CourseProject_Utility;

<div class="border p-3 bg-white">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-info">@sharedResource["ReviewList"]</h2>
        </div>
        <div class="col-6" align="right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; @sharedResource["CreateNewRev"]
            </a>
        </div>
    </div>

    <table id="tableData" class="table table-striped table-bordered pt-2" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>@sharedResource["ReviewTitle"]</th>
                <th>@sharedResource["Author"]</th>
                <th>@sharedResource["TitlePiece"]</th>
                <th>@sharedResource["RevCreatDate"]</th>
                <th>@sharedResource["Description"]</th>
                <th>@sharedResource["Rating"]</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/review.js"></script>
}